{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
	{
	    "name": "client",
	    "image": "fabiograetz/multi-client",
	    "hostname": "client",
	    "essential": false
	},
	{
	    "name": "server",
	    "image": "fabiograetz/multi-server",
	    "hostname": "api",
	    "essential": false
	},
	{
	    "name": "worker",
	    "image": "fabiograetz/multi-worker",
	    "hostname": "worker",
	    "essential": false
	},
	{
	    "name": "nginx",
	    "image": "fabiograetz/multi-nginx",
	    "essential": true,
	    "portMappings": [
		{
		    "hostPort": 80,
		    "containerPort": 80
		}
	    ],
	    "links": ["client", "server"]
	}
    ]
}
